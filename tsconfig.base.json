{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "moduleDetection": "force",
    "module": "ESNext",

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowJs": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,

    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
